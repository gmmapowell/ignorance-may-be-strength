{
	"name": "flas-st",
	"scopeName": "source.flas-st",
	"patterns": [
		{ "include": "#comment" },
		{ "include": "#configure-intro"},
		{ "include": "#test-step"},
		{ "include": "#state-intro"},
		{ "include": "#implements-intro"},
		{ "include": "#steps" }
	],
	"repository" : {
		"comment": {
			"name": "comment.line.file",
			"match": "^[^ \t].*$"
		},
		"trailcomment": {
			"name": "comment",
			"match": "//.*"
		},
		"configure-intro": {
			"begin": "\tconfigure\\b",
			"beginCaptures": {
				"0": { "name": "keyword.intro" }
			},
			"end": "$",
			"name": "statement.configure",
			"patterns": [{"include":"#typename"}, {"include":"#trailcomment"}]
		},
		"test-step": {
			"begin": "\ttest\\b",
			"beginCaptures": {
				"0": { "name": "keyword.intro" }
			},
			"end": "$",
			"name": "comment.description"
		},
		"state-intro": {
			"begin": "^\t\tstate\\b",
			"beginCaptures": {
				"0": { "name": "keyword.intro" }
			},
			"end": "(//.*$|$)",
			"name": "statement.card",
			"patterns": [{"include":"#typename"}]
		},
		"implements-intro": {
			"begin": "^\t\timplements\\b",
			"beginCaptures": {
				"0": { "name": "keyword.intro" }
			},
			"end": "(//.*$|$)",
			"name": "statement.card",
			"patterns": [{"include":"#typename"}]
		},
		"typename": {
			"match": "\\b[A-Z][A-Za-z0-9_][A-Za-z0-9_]+\\b",
			"name": "name.type"
		}
		,
		"steps": {
			"match": "\\b(data|assert|contract)\\b",
			"name": "keyword.intro"			
		}
	}
}
