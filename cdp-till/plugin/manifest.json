{
	"manifest_version": 3,
	"name": "Till Debugger",
	"version": "2025.03.19",
	"permissions": ["sidePanel", "webRequest"],
	"side_panel": {
		"default_path": "html/sidepanel.html"
	},
	"action": {
		"default_title": "Click to open debugger"
	},
	"background": {
		"service_worker": "js/service-worker.js"
	}
}